# Production Environment Variables for wger
# SECURITY WARNING: Never commit actual secrets to repository
# Use GitHub Secrets for CI/CD deployment

# ============ Django Settings ============
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=CHANGEME-USE-STRONG-SECRET-KEY-IN-PRODUCTION
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,wger.example.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=CHANGEME-USE-STRONG-PASSWORD
DJANGO_SUPERUSER_EMAIL=admin@wger.example.com

# ============ Database Settings ============
DB_PASSWORD=CHANGEME-USE-STRONG-DB-PASSWORD
POSTGRES_USER=wger
POSTGRES_PASSWORD=CHANGEME-USE-STRONG-DB-PASSWORD
POSTGRES_DB=wger

# ============ Security Settings ============
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_AGE=3600

# ============ File Upload Settings ============
USE_SECURE_UPLOADS=True
ALLOWED_FILE_TYPES=jpg,png,gif,pdf
MAX_UPLOAD_SIZE=5242880

# ============ Cache & Queue Settings ============
CACHE_BACKEND=redis
CACHE_HOST=redis
CACHE_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============ Email Settings (Optional) ============
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@wger.example.com

# ============ Deployment Settings ============
DATA_PATH=./data
ALLOWED_HOSTS=localhost,127.0.0.1
DEPLOY_USER=wger
DEPLOY_HOST=your-vm-ip-or-hostname

# ============ Logging ============
LOG_LEVEL=INFO
TZ=Europe/Berlin

# ============ Application Settings ============
USE_GUNICORN=True
WGER_USE_GUNICON=True
SYNC_EXERCISES_ON_STARTUP=False
EXERCISE_CACHE_TTL=30
